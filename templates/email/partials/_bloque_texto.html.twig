{% if texto is defined and texto|trim %}
  <table class="paragraph_block block-2" width="100%" border="0" cellpadding="0" cellspacing="0" role="presentation"
    style="mso-table-lspace: 0pt; mso-table-rspace: 0pt; word-break: break-word;">
    <tr>
      <td class="pad" style="padding-bottom:10px;padding-left:20px;padding-right:60px;padding-top:10px;">
        <div style="color:#101112;direction:ltr;font-family:Helvetica Neue, Helvetica, Arial, sans-serif;font-size:16px;font-weight:400;letter-spacing:0px;line-height:150%;text-align:left;mso-line-height-alt:24px;">
          <p style="margin: 0;">{{ texto|default('')|raw }}</p>
        </div>
      </td>
    </tr>
  </table>
{% endif %}