{% extends 'email/base.html.twig' %}

{% block cuerpo_email %}
    {# Titulo #}
    {% include 'email/partials/_bloque_titulo.html.twig' with { titulo: 'Recuperación de contraseña' } %}

    {# Texto #}
    {% include 'email/partials/_bloque_texto.html.twig' with {
        texto: 'Hola <strong>' ~ nombre ~ '</strong>, hemos recibido una solicitud para restablecer tu contraseña. Haz clic en el siguiente enlace para continuar:'
    } %}

    {# Botones #}
    {% include 'email/partials/_bloque_botones.html.twig' with {
        botones: [
            {
                partial: 'email/partials/_boton_primary.html.twig',
                params: {
                    href: resetPasswordUrl,
                    texto: 'Reestablecer contraseña', 
                }
            }
        ]
    } %}

    {# Texto #}
    {% include 'email/partials/_bloque_texto.html.twig' with { texto: '
        Si no visualiza el botón directamente, por favor, copie y pegue el enlace proporcionado debajo:
    ' } %}

    {# Texto #}
    {% include 'email/partials/_bloque_texto.html.twig' with { texto: resetPasswordUrl } %}

    {# Texto #}
    {% include 'email/partials/_bloque_texto.html.twig' with {
        texto: 'Si no solicitaste este cambio, ignora este correo. No se requiere ninguna acción adicional.'
    } %}
{% endblock %}